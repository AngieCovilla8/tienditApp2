<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.intento">

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Intento">
        <activity
            android:name=".Inventario"
            android:exported="false" />
        <activity
            android:name=".Registro"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="false"
            android:label="@string/title_activity_registro"
            android:parentActivityName=".Bienvenida"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" />
        <activity
            android:name=".Login"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="false"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.MaterialComponents.Light.NoActionBar" />
        <activity
            android:name=".Reporte"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="false"
            android:label="Reporte"
            android:theme="@style/Theme.MaterialComponents.Light.DarkActionBar.Bridge" />
        <activity
            android:name=".Productos"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="false"
            android:label="Productos"
            android:theme="@style/Theme.MaterialComponents.Light.DarkActionBar.Bridge" />
        <activity
            android:name=".Proveedores"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="false"
            android:label="Proveedores"
            android:theme="@style/Theme.MaterialComponents.Light.DarkActionBar.Bridge" />
        <activity
            android:name=".Proveedor"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="false"
            android:label="Proveedor"
            android:theme="@style/Theme.MaterialComponents.Light.DarkActionBar.Bridge" />
        <activity
            android:name=".Bienvenida"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="true"
            android:label="@string/title_activity_bienvenida"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Home"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.MaterialComponents.Light.DarkActionBar.Bridge" />
    </application>

</manifest>